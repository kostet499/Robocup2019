# !/bin/bash
# configure toolchain for the desktop
qitoolchain create toolchain_for_desktop naoqi/toolchain.xml
qibuild add-config toolchain_for_desktop -t toolchain_for_desktop

# configure toolchain for the robot
qitoolchain create toolchain_for_robot ctc-linux64-atom-2.8.2.15/toolchain.xml
qibuild add-config toolchain_for_robot -t toolchain_for_robot
